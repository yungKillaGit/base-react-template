{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "~/app/*": ["app/*"],
      "~/pages/*": ["pages/*"],
      "~/processes/*": ["processes/*"],
      "~/widgets/*": ["widgets/*"],
      "~/features/*": ["features/*"],
      "~/entities/*": ["entities/*"],
      "~/ui/*": ["shared/ui/*"],
      "~/lib/*": ["shared/lib/*"],
      "~/config/*": ["shared/config/*"],
      "~/shared/*": ["shared/*"]
    }
  },
  "include": ["src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
